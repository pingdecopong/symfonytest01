             document.systemuser_list2.submit();
         }
         #}
        function changeSortType(sortName, sortType){
            document.systemuser_list4.{{ form.sortName.vars.id }}.value = sortName;
            document.systemuser_list4.{{ form.sortType.vars.id }}.value = sortType;
            document.systemuser_list4.submit();
